<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="BUTTON"
        android:layout_centerInParent="true"
        android:id="@+id/main_btn"
        android:background="@color/teal_200">
    </Button>
    <Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_alignStart="@+id/main_btn"
    android:layout_above="@id/main_btn"
    android:background="@color/purple_500">
    </Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/main_btn"
        android:layout_below="@id/main_btn"
        android:background="@color/purple_500">
    </Button>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/main_btn"
        android:layout_alignTop="@id/main_btn"
        android:background="@color/purple_500" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toStartOf="@id/main_btn"
       android:layout_alignBottom="@id/main_btn"
        android:background="@color/purple_500" />
</RelativeLayout>